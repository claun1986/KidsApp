<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#97646464"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true">

    <ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:id="@+id/imgkind1"
    android:src="@drawable/icon"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Krankheiten"
        android:layout_toLeftOf="@+id/imgkind1"
        android:text="Krankheiten"
        android:textColor="#A31D80"
        android:textSize="30dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/Medikamente"
        android:text="Medikamente"
        android:layout_below="@+id/Krankheiten"
        android:layout_marginTop="30dp"
        android:textColor="#A31D80"
        android:background="#FFD524"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newMedField"
        android:orientation="vertical"
        android:layout_below="@id/Medikamente"
        >

        <include layout="@layout/medcontainer"> </include>

        </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hinzufÃ¼gen"
        android:id="@+id/add2"
        android:layout_below="@id/newMedField"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
      />



    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/Dauer"
        android:text="Dauer"
        android:textColor="#A31D80"
        android:background="#FFD524"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/add2"
        android:layout_marginTop="30dp"
                                    />


</RelativeLayout>

    </ScrollView>
