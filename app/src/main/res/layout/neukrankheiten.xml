<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#97646464"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true">

    <ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:id="@+id/imgkind1"
    android:src="@drawable/icon"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Krankheiten"
        android:layout_toLeftOf="@+id/imgkind1"
        android:text="Krankheiten"
        android:textColor="#A31D80"
        android:textSize="30dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textStyle="bold"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/neueKrankheit"
        android:textColor="#FFD524"
        android:layout_marginTop="40dp"
        android:layout_below="@id/Krankheiten"
        android:gravity="center"
        android:textSize="20dp"
        android:hint="Neue Krankheit eingeben"
        android:textColorHint="#c6616161" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/Medikamente"
        android:text="Medikamente"
        android:layout_below="@+id/neueKrankheit"
        android:layout_marginTop="30dp"
        android:textColor="#A31D80"
        android:background="#ffcccccc"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:shadowColor="@android:color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"/>





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newMedField"
        android:orientation="vertical"
        android:layout_below="@id/Medikamente"
        >

        <include layout="@layout/medcontainer"> </include>

        </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neues Medikament hinzufÃ¼gen"
        android:id="@+id/add2"
        android:layout_below="@id/newMedField"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="20dp"

        />


</RelativeLayout>

    </ScrollView>
