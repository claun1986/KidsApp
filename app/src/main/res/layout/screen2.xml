<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#97646464"
    >


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgkind1"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Krankheiten"
        android:layout_below="@id/imgkind1"
        android:text="@string/krankheiten"
        android:textColor="#A31D80"
        android:background="#FFCCCCCC"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        />
    <Button
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Medikamente"
        android:layout_below="@id/Krankheiten"
        android:text="@string/Medikamente"
        android:textColor="#A31D80"
        android:background="#FFCCCCCC"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:shadowColor="@android:color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/aerzte"
        android:layout_below="@id/Medikamente"
        android:text="@string/Ã„rzte"
        android:textColor="#A31D80"
        android:background="#FFCCCCCC"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:shadowColor="@android:color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        />

    <Button
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Termine"
        android:layout_below="@id/aerzte"
        android:text="@string/Termine"
        android:textColor="#A31D80"
        android:background="#FFCCCCCC"
        android:linksClickable="false"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:shadowColor="@android:color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"


        />

</RelativeLayout>