<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#97646464"
    >


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgkind1"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Krankheiten"
        android:text="Krankheiten"
        android:textColor="#FFD524"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_toLeftOf="@+id/imgkind1"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Krankheit1"
        android:text="Krankheit 1"
        android:layout_below="@+id/Krankheiten"
        android:layout_marginTop="40dp"
        android:textColor="#A31D80"
        android:background="#FFCCCCCC"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Krankheit2"
        android:text="Krankheit 2"
        android:layout_below="@+id/Krankheit1"
        android:layout_marginTop="30dp"
        android:textColor="#A31D80"
        android:background="#FFCCCCCC"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:id="@+id/Krankheit3"
        android:text="Krankheit 3"
        android:layout_below="@+id/Krankheit2"
        android:layout_marginTop="30dp"
        android:textColor="#A31D80"
        android:background="#FFCCCCCC"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hinzufÃ¼gen"
        android:id="@+id/add1"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/Krankheit3"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        />


</RelativeLayout>