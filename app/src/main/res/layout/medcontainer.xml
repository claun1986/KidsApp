<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/neuesMedikament"
        android:textColor="#FFD524"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:textSize="20dp"
        android:hint="neues Medikament eingeben"
        android:textColorHint="#c6616161" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Dosierung"
        android:textStyle="bold"

        android:id="@+id/Dosierung"
        android:layout_below="@id/neuesMedikament"
        />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_dosierung"
        android:spinnerMode="dropdown"
        android:layout_toRightOf="@id/Dosierung"
        android:layout_below="@id/neuesMedikament"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_menge"
        android:spinnerMode="dropdown"
        android:layout_toRightOf="@id/spinner_dosierung"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/neuesMedikament"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OK"
        android:text="OK"
        android:layout_below="@id/neuesMedikament"
        android:layout_toRightOf="@id/spinner_menge"
        android:textStyle="bold"
        />



</RelativeLayout>